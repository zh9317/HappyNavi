<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/input_tracename"
            android:textSize="20dp"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />
        <EditText
            android:id="@+id/sport_dialog_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLength="15"
            android:focusable="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/choosetype"
        android:textSize="20dp"
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bfbfbf" />
    <GridView
        android:id="@+id/grid_sporttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchMode="columnWidth"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:numColumns="3" >
    </GridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bfbfbf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/sportdialog_starttrail"
            android:layout_width="114.0dip"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:text="@string/confirm"
            style="@style/text_15_ffffff_sdw"
            android:textSize="20dp"
            android:background="@drawable/btn_ok_selector" />
        <Button
            android:id="@+id/sportdialog_canceltrail"
            android:layout_width="114.0dip"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="@string/cancl"
            style="@style/text_15_666666_sdw"
            android:textSize="20dp"
            android:background="@drawable/btn_cancel_selector" />
    </LinearLayout>

</LinearLayout>